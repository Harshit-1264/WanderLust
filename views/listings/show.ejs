<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>Listing Details </h3>
    </div>

    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br>
            <%= listing.description %> <br>
            &#8377; <%= listing.price%> <br>                    <!--&#8377; rupee symbol & .toLocalString("en-IN") convert price into string en-IN with indian standard-->
            <%= listing.location %> <br>
            <%= listing.country %> <br>
        </p>
        </div>
    </div>

    <br>

    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 col-1 edit-btn">Edit</a>   <!--for editing listing-->
        <br/><br/>
        <form method="POST" action="/listings/<%=listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>   <!--for delete the listing-->
        </form>
    </div>
    
</div>

<!-- </html> -->